{% block title %}Supplier{% endblock %}

{% block body %}
    <h1>Supplier</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ supplier.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ supplier.name }}</td>
