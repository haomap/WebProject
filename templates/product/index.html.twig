
{% extends 'admintheme.html.twig' %}

{% block title %}Product Manager{% endblock %}

{% block body %}
    <h1>Product Manager</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Category</th>
                <th>Brand</th>
                <th>Supplier</th>
                <th>Image</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.category.name }}</td>
                <td>{{ product.brand.name }}</td>
                <td>{{ product.supplier.name }}</td>
                <td>
                    <img src="{{ asset('uploads/images/' ~ product.image) }}" style="width: 100px;" alt="{{ product.name }}">
                </td>
                <td>${{ product.price }}</td>
                <td>
                    <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-primary">Show</a>
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-warning">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_product_new') }}" class="btn btn-success">Create</a>
{% endblock %}
